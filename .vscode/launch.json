{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/main_debug.elf", //编译出来的文件
            "args": [],
            "stopAtEntry": true,    //开始的时候暂停
            "cwd": "${workspaceFolder}/bin/", //执行目录，尽力和可执行文件相同
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}